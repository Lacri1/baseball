<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baseball.game.mapper.TeamLineupMapper">
    
    <!-- 기본 라인업 조회 (컴퓨터용) -->
    <select id="findDefaultLineupByTeam" resultType="com.baseball.game.dto.TeamLineup">
        SELECT * FROM team_lineup
        WHERE team_name = #{teamName}
        AND is_active = true
        ORDER BY position
    </select>
    
    <!-- 팀별 사용 가능한 선수 목록 조회 -->
    <select id="findAvailablePlayersByTeam" resultType="String">
        SELECT Name FROM player 
        WHERE Team = #{teamName}
        ORDER BY Name
    </select>
    
</mapper> 